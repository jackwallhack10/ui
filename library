-- FluentUI Replica for Roblox Executors (Fixed and Restyled)
-- Usage: loadstring(game:HttpGet("<your-raw-url>"))()

if not game or not game.Players or not game.Players.LocalPlayer then return end
local player = game.Players.LocalPlayer
local playerGui = player:FindFirstChildOfClass("PlayerGui")
if not playerGui then return end

local function createUICorner(parent, radius)
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, radius or 14)
    corner.Parent = parent
end

local function createUIStroke(parent, color, thickness)
    local stroke = Instance.new("UIStroke")
    stroke.Color = color or Color3.fromRGB(60, 60, 80)
    stroke.Thickness = thickness or 1.5
    stroke.Transparency = 0.6
    stroke.Parent = parent
end

local function createShadow(parent, z)
    local shadow = Instance.new("ImageLabel")
    shadow.Name = "DropShadow"
    shadow.BackgroundTransparency = 1
    shadow.Image = "rbxassetid://1316045217"
    shadow.ImageTransparency = 0.85
    shadow.Size = UDim2.new(1, 24, 1, 24)
    shadow.Position = UDim2.new(0, -12, 0, -12)
    shadow.ZIndex = z or 0
    shadow.Parent = parent
end

local function createGlass(frame)
    local blur = Instance.new("ImageLabel")
    blur.BackgroundTransparency = 1
    blur.Image = "rbxassetid://5553946656" -- Glass blur asset
    blur.ImageTransparency = 0.85
    blur.Size = UDim2.new(1, 0, 1, 0)
    blur.Position = UDim2.new(0, 0, 0, 0)
    blur.ZIndex = frame.ZIndex - 1
    blur.Parent = frame
end

local FluentUI = {}
_G.FluentUI = FluentUI

function FluentUI:Create()
    local gui = Instance.new("ScreenGui")
    gui.Name = "FluentUI"
    gui.ResetOnSpawn = false
    gui.Parent = playerGui

    -- Main Window
    local main = Instance.new("Frame")
    main.Size = UDim2.new(0, 700, 0, 420)
    main.Position = UDim2.new(0.5, -350, 0.5, -210)
    main.BackgroundColor3 = Color3.fromRGB(36, 37, 39)
    main.BackgroundTransparency = 0
    main.ZIndex = 2
    main.Parent = gui
    createUICorner(main, 18)
    createUIStroke(main, Color3.fromRGB(40, 40, 60), 2)
    createShadow(main, 1)
    createGlass(main)

    -- Title (centered at the top)
    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(1, 0, 0, 40)
    title.Position = UDim2.new(0, 0, 0, 0)
    title.BackgroundTransparency = 1
    title.Text = "GhostWare"
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.Font = Enum.Font.GothamBold
    title.TextSize = 28
    title.TextXAlignment = Enum.TextXAlignment.Center
    title.TextYAlignment = Enum.TextYAlignment.Center
    title.ZIndex = 5
    title.Parent = main

    -- Sidebar
    local sidebar = Instance.new("Frame")
    sidebar.Size = UDim2.new(0, 180, 1, -20)
    sidebar.Position = UDim2.new(0, 10, 0, 50)
    sidebar.BackgroundColor3 = Color3.fromRGB(44, 45, 48)
    sidebar.BackgroundTransparency = 0
    sidebar.ZIndex = 3
    sidebar.Parent = main
    createUICorner(sidebar, 14)
    createUIStroke(sidebar, Color3.fromRGB(40, 40, 60), 1)

    -- Sidebar Buttons
    local buttonNames = {"Aimbot", "Visuals", "Player"}
    for i, name in ipairs(buttonNames) do
        local btn = Instance.new("TextButton")
        btn.Size = UDim2.new(1, -20, 0, 32)
        btn.Position = UDim2.new(0, 10, 0, 20 + (i-1)*40)
        btn.BackgroundColor3 = Color3.fromRGB(44, 45, 48)
        btn.BackgroundTransparency = 1
        btn.Text = name
        btn.TextColor3 = Color3.fromRGB(255, 255, 255)
        btn.Font = Enum.Font.Gotham
        btn.TextSize = 18
        btn.TextXAlignment = Enum.TextXAlignment.Left
        btn.ZIndex = 4
        btn.Parent = sidebar
    end

    -- Main Content Area
    local content = Instance.new("Frame")
    content.Size = UDim2.new(1, -210, 1, -70)
    content.Position = UDim2.new(0, 200, 0, 50)
    content.BackgroundColor3 = Color3.fromRGB(44, 45, 48)
    content.BackgroundTransparency = 0
    content.ZIndex = 5
    content.Parent = main
    createUICorner(content, 14)
    createUIStroke(content, Color3.fromRGB(40, 40, 60), 1)

    return gui
end

-- Example usage:
if not _G.FluentUI_Example then
    _G.FluentUI_Example = true
    FluentUI:Create()
end 
